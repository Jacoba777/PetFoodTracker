<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounds"
    tools:context=".LeaveHHActivity16">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RemoveHHTV1"
        android:text="Are you sure you want to leave ?"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="130dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/RemoveHHBtn1"
        android:text="YES"
        android:textSize="30dp"
        android:layout_above="@id/RemoveHHBtn2"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:onClick="leaveHH"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/RemoveHHBtn2"
        android:text="NO"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:onClick="finish"/>


</RelativeLayout>