<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".JoinHHSuccessActivity3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessTV1"
        android:layout_marginTop="190dp"
        android:text="Congrats, "
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessET1"
        android:textSize="30sp"
        android:layout_marginTop="190dp"
        android:layout_toEndOf="@id/JoinHHSuccessTV1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessTV2"
        android:layout_toEndOf="@id/JoinHHSuccessET1"
        android:text="!"
        android:textStyle="bold"
        android:layout_marginTop="190dp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessTV3"
        android:text="You've just joined "
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/JoinHHSuccessTV2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessET2"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/JoinHHSuccessTV3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessTV4"
        android:layout_below="@id/JoinHHSuccessET2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Household."
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/JoinHHSuccessBtn"
        android:text="OK"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/JoinHHSuccessTV4"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>